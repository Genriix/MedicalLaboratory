<Page x:Class="MedicalLaboratory.Pages.UserPages.LaboratorianResercherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalLaboratory.Pages.UserPages"
      mc:Ignorable="d" 
       d:DesignWidth="1280" d:DesignHeight="598"
      Title="LaboratorianResercherPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"  Background="#045584" Margin="10" CornerRadius="25" Padding="5">
            <StackPanel>
                <Button Style="{StaticResource BaseButton}" Content="Записи на приём" Width="210" Margin="5"/>
                <Button Style="{StaticResource BaseButton}" Content="Анализаторы" Width="210" Margin="5"/>
                <Button Style="{StaticResource BaseButton}" Content="Отчёты" Width="210" Margin="5"/>
            </StackPanel>
        </Border>


        <ScrollViewer Grid.Column="1">
            <Frame Name="LaboratorianResercherFrame" NavigationUIVisibility="Hidden"/>
        </ScrollViewer>
    </Grid>
</Page>
