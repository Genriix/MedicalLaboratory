<Page x:Class="MedicalLaboratory.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalLaboratory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1200"
      Title="LoginPage">

    <ScrollViewer>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

            <Rectangle HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="294" Width="352" Fill="#81dbee" RadiusX="25" RadiusY="25"/>
            <StackPanel Orientation="Horizontal">

                <Image Source="/Sources/logo.png" Width="128" Height="128" Margin="25,25,25,0" VerticalAlignment="Top"/>
                
                <StackPanel>

                    <StackPanel Width="130" Margin="0,15,0,10">
                        <Label Content="Логин" HorizontalAlignment="Left" Height="34" Width="60" FontSize="22" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" Margin="0,0,0,-3"/>
                        <TextBox Name="Login" TextWrapping="Wrap" Text="" Width="120" FontSize="18" FontFamily="Bahnschrift SemiBold Condensed" Foreground="#045584"/>
                        <Label Content="Пароль" HorizontalAlignment="Left" Height="34" Width="74" FontSize="22" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" Margin="0,0,0,-3"/>
                        <PasswordBox Name="Password" Width="120" Password="" FontSize="18" Foreground="#045584"/>
                    </StackPanel>


                    <Grid>
                        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" Height="107" Stroke="Black" Width="148" Fill="White"/>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="107" Width="140">
                            <Label Content="vladisCAPTCHA" Height="auto" Width="119"/>
                            <Button Content="Сгенерировать" Click="GenerateRandomSequence" FontSize="12" Height="auto" Width="126" Margin="0,0,0,0"/>
                            <TextBox x:Name="CapOut" Height="21" TextWrapping="Wrap" Width="120" Margin="0,5,0,0"/>
                            <TextBox x:Name="CapIn" Height="20" TextWrapping="Wrap" Width="120" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click" Background="White" Foreground="#045584" Height="30" Width="136" Margin="5,10,5,0" FontSize="20" FontFamily="Bahnschrift SemiBold Condensed"/>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top"><Hyperlink NavigateUri="RegistrationPage.xaml">Зарегистрироваться</Hyperlink></TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
